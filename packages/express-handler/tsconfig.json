{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "esModuleInterop": true,
    "baseUrl": ".",
    "target": "ES2022",
    "module": "Node16",
    "declaration": true,
    "moduleResolution": "Node16"
  },
  "include": ["src/**/*"]
}

